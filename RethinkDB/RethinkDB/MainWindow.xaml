<Window x:Class="RethinkDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RethinkDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="525">
    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="Id" Margin="12"/>
            <Button x:Name="Add" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Add_OnClick" Margin="12"/>
            <Button x:Name="Update" Content="Update" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Update_OnClick" Margin="12"/>
            <Button x:Name="Listen" Content="Listen" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Listen_OnClick" Margin="12"/>
            <RichTextBox Height="400" x:Name="Log"/>
        </StackPanel>

    </Grid>
</Window>
